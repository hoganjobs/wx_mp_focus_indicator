<!-- 敏感观点模板 -->
<template name="sensitive_true">
  <view class="pz_result_article_list" hover-class="pz_result_article_list_hover" style="background-color:{{resultArticleListBgcStyle}};" data-article="{{resultArticle}}" bindtap="articleListTap">
    <view class="pz_result_article_list_top">
      <view class="pz_result_article_list_left">
        <view class="pz_result_article_list_content">
          <view class="pz_result_article_list_text">
            {{resultArticle.title}}
          </view>
          <!-- <view class="pz_result_article_list_score">({{resultArticle.title_sign_score}})</view> -->
        </view>
        <view class="pz_result_article_list_media">
          <view class="pz_result_article_list_num" wx:if="{{resultArticle.media_num > 1}}">{{resultArticle.media_num}}家媒体</view>
          <view class="pz_result_article_list_point" wx:if="{{resultArticle.is_sensitive}}">敏感观点</view>
          <!-- <view class="pz_result_media_item" wx:for="{{resultArticle.medias}}" wx:key="artMediaId" wx:for-item="artMedia">{{artMedia}}</view> -->
        </view>
      </view>
      <view class="pz_result_article_list_right">
        <template is="{{resultArticle.title_sign_wind}}" data="{{resultArticle}}"/>
      </view>
    </view>
    <view class="pz_result_article_list_bottom">
      <view class="pz_result_article_list_left">
        <view class="pz_result_article_list_media">
          <view class="pz_result_article_list_media_name">{{resultArticle.media_name_sign}}</view>
          <view class="pz_result_article_list_date">{{resultArticle.publish_at}}</view>
        </view>
      </view>
      <view class="pz_result_article_list_right" wx:if="{{resultArticle.media_wind > 0}}">
        <view class="pz_result_article_list_wind_grading">
          <view class="pz_result_article_list_wind_top">
            <!-- <image class="pz_result_article_list_wind_img" style="width: 20px; height: 20px;" mode="{{item.mode}}" src="../../image/icon_fengli.svg"></image> -->
            <view class="pz_result_article_list_wind_text">最大风力</view>
          </view>
          <view class="pz_result_article_list_wind_bottom">
            <!-- <view class="pz_result_article_list_wind_level">最大</view> -->
            <view class="pz_result_article_list_wind_level_num">{{resultArticle.media_wind}}</view>
            <view class="pz_result_article_list_wind_level">级</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>

