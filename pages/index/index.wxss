/**index.wxss**/
page {
  /*background-color:#262729;*/
  background: linear-gradient(#248bf8, #39cbfb);
}
.container {
  height: 100vh;
  padding: 0px 15px;
  /*background-color:#262729;*/
  position: relative;
}
.pz_bg_img {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

/*search input start*/
.pz_search_wrap {
  width: 100%;
  margin-top: 200rpx;
}
.pz_header_wrap {
  display: block;
  margin: 0 auto;
  text-align: center;
}
.pz_header_wrap image {
  width: 32px;
  height: 32px;
  vertical-align: text-bottom;
}
.pz_header_text {
  display: inline-block;
  /*margin-left: 8px;*/
  vertical-align: top;
  line-height: 34px;
  font-size: 28px;
  color: #fff;
}
.pz_search_form {
  display: block;
  /*margin-right: 80px;*/
  margin-top: 20px;
  padding: 0 20px;
  background-color: #fff;
  border-radius: 5px;
  position: relative;
}
.pz_search_input {
  /*display: inline-block;*/
  margin-right: 80px;
  height: 44px;
  font-size: 16px;
  line-height: 44px;
}
.pz_search_btn {
  width: 25%;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  color: #e9fbff;
  background-color: #0E6BBA;
  border-left: 1px solid #fff;
  border-radius: 0 4px 4px 0;
  position: absolute;
  right: 0;
  top: 0;
}
.pz_search_btn_hover {
  background-color: #0d60a7;
  color: #e5e5e5;
}
button::after {
  border: #fff
}
.pz_search_btn_ico {
  padding-top: 8px;
}
.pz_hot_keyword_wrap {
    margin-top: 5px;
    max-height: 176px;
    overflow: auto;
}
.pz_hot_keyword_wrap text {
  /*display: inline-block;*/
  margin-left: 4px;
  font-size: 14px;
  color: #fff;
}
.pz_hot_keyword {
  /*height: 29px;*/
  margin-top: 10px;
  margin-right: 9px;
  padding: 2px 10px;
  display: inline-block;
  line-height: 20px;
  font-size: 14px;
  color: #fff;
  text-align: center;
  border-color: none;
  border-radius: 4px;
  background-color: #188BD0;
}

.pz_keyword_records_wrap {
  margin-top: 5px;
  max-height: 320px;
  /*overflow: auto;*/
}
.pz_keyword_records_wrap text {
  /*display: inline-block;*/
  margin-left: 4px;
  padding: 2px 0;
  line-height: 16px;
  font-size: 14px;
  color: #fff;
}
.pz_keyword_records {
  margin-top: 10px;
  margin-right: 9px;
  padding: 2px 10px;
  display: inline-block;
  line-height: 20px;
  font-size: 14px;
  color: #fff;
  text-align: center;
  border-color: none;
  border-radius: 4px;
  background-color: #188BD0;
}
.pz_keyword_records_hover {
  background-color: #167dbb;
  color: #e5e5e5;
}
/*search input end*/

.pz_footer {
  margin-bottom: 20px;
  font-size: 14px;
  color: #fdfeff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pz_footer text{
  margin-left: 2px;
}



























