.snack-bar-hide{
  display: none;
}
.snack-bar{
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: black;
  display: flex;
  flex-flow: row nowrap;
  bottom: 0;
  z-index: 1000;
  align-items: center;
  justify-content: space-between;    
}
.snack-text{
  color: white;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 40rpx;
  font-size: 28rpx;
}
.snack-action{
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;
  text-align: center;
  color: #ffffff;
  padding: 0 8rpx;
  background-color: #3095fb;
}
.hover-action{
  color: #3095fb;
  background-color:rgba(180,180, 180, 0.4);
  border-radius: 4rpx;
}
.snack-cancel {
  width: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 0;
  margin-right: 20rpx;
  text-align: center;
  color: #999999;
  padding: 0 8rpx;
  background-color: #ededed;
  border-radius: 5px;
}
.hover-cancel {
  color: white;
  background-color: rgba(180,180, 180, 0.3);
}
